{
    "$schema": "https://aka.ms/winget-settings.schema.json",

    // For documentation on these settings, see: https://aka.ms/winget-settings
    "source": {
       "autoUpdateIntervalInMinutes": 60
    },
    "visual": {
        "progressBar": "accent"
    },
    "installBehavior": {
        "preferences": {
            "scope": "machine",
            "locale": [ "en-GB", "en-US" ],
            "architectures": ["x64"]
        }
    },
    "uninstallBehavior": {
        "purgePortablePackage": true
    },
    "telemetry": {
        "disable": true
    },
    "network": {
        "downloader": "do",
        "doProgressTimeoutInSeconds": 10
    },
    "experimentalFeatures": {
        "dependencies": true
    }
}
